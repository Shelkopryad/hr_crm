<a href="<%= employees_path %>" class="collection-item"><<< Return</a>

<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <% if @employee.photo.attached? %>
        <div class="card-image">
          <%= image_tag @employee.photo %>
        </div>
      <% end %>
      <div class="card-content white-text">
        <span class="card-title"><%= @employee.name %> <%= @employee.last_name %></span>
        <p><%= @employee.current_position %></p>
        <p><%= @employee.birthdate %></p>
        <p><%= @employee.date_of_employing %></p>
        <p><%= @employee.email %></p>
        <p><%= link_to 'Edit', edit_employee_path(@employee) %></p>

        <% unless @history_points.empty? %>
          <div class="divider"></div>
          <span class="card-title">History:</span>
          <ul>
            <% @history_points.each do |point| %>
              <li><%= point.description %></li>
            <% end %>
          </ul>
        <% end %>

      </div>

      <div class="card-action">
        <%= link_to 'Certificate of employment', print_reference_employee_path(@employee, format: :pdf), target: :_blank %>
      </div>
    </div>
  </div>
  <div class="col s13 m6">
    <span class="card-title">Vacations:</span>
    <br />
    <% unless @empl_vacations.empty? %>
      <ul>
        <% @empl_vacations.each do |vacation| %>
          <li><%= vacation.start_date.strftime('%Y.%m.%d') %> - <%= vacation.end_date.strftime('%Y.%m.%d') %></li>
        <% end %>
      </ul>
    <% end %>

    <%= link_to 'Add vacation', add_vacation_employee_path(@employee) %>
  </div>
</div>